{
  "name": "eson-analyzer",
  "displayName": "eson-analyzer",
  "description": "Esonlang support for Visual Studio Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/esonlang/eson-analyzer-vsce.git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "icon": "icon.png",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.90.0"
  },
  "publisher": "esonlang",
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:eson",
    "workspaceContains:**/.eson"
  ],
  "files": [
    "out/**",
    "lsp/target/release/lsp-server",
    "README.md",
    "LICENSE.txt",
    "icon.png"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "eson",
        "extensions": [
          ".eson"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "eson-language-server",
      "properties": {
        "eson-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "eson-lsp.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run build-base -- --sourcemap",
    "package": "vsce package patch --no-dependencies --no-git-tag-version",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "typecheck": "tsc",
    "pretest": "npm run typecheck && npm run build",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}